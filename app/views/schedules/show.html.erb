<h1><%= @schedule.name %></h1>

<% @schedule.events.each do |e| %>
  <p><%= e.name %> <strong><%= e.service %></strong></p>
<% end %>

<p><%= link_to "Add New Event", new_schedule_event_path(@schedule) %></p>

<footer>
  <%= link_to "Edit", edit_schedule_path %>
  <%= link_to "Delete", schedule_path(@schedule), method: :delete, data: {confirm: "Are you sure?"}  %>
  <p>
  <%= link_to "All Schedules", schedules_path %>
  </p>
</footer>
